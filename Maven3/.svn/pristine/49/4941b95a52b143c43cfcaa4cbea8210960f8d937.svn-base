*{
	margin: 0;
	padding: 0;
}
._1item{
position: relative;
height: 100px;
line-height: 100px;
}
._1item a.layer1{
color: white;
padding: 10px 20px;
}
._1item:hover a.layer1{
color: rgb(255.255.255);

}
.layer2 a{
	height: 40px;
	line-height: 40px;
}
._1item .layer2{
	position: absolute;
	top: 80px;
	left: 20px;
	visibility: hidden;
	opacity: 0;
	transition: 0.4s;
	width: 200px;
	background: #e8e0e0;
}
._1item:hover .layer2{
	visibility: visible;
	opacity: 1;
	z-index: 2;
	
}
._1item .layer2 ul{
list-style: none;
}
._1item .layer2 ul li{

}
._1item .layer2 ul li a{
	display: block;
	width: 200px;
	padding: 5px 10px;
	font-family: segoe ui light;
	color: black;
	border-bottom: 1px solid gray;
	box-sizing: border-box;
}
._1item .layer2 ul li a:hover{
	background: white;
	color: black;
}
